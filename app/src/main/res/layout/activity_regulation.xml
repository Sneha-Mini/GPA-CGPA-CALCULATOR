<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".regulation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/toplogobg"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/gpa_cgpa_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA &amp; CGPA"
                    android:textColor="#32B768"
                    android:textSize="18dp"
                    android:fontFamily="@font/hammersmithone_regular_font"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALCULATOR"
                    android:textColor="#32B768"
                    android:textSize="18dp"
                    android:fontFamily="@font/hammersmithone_regular_font"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/reg21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/greenboxbg"
                android:text="REGULATION

                2021"
                android:padding="20dp"
                android:gravity="center"
                android:fontFamily="@font/hammersmithone_regular_font"
                android:textColor="#FAFAFA"
                android:textSize="26dp"/>

            <TextView
                android:id="@+id/reg17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/greenboxbg"
                android:text="REGULATION

                2017"
                android:padding="20dp"
                android:gravity="center"
                android:fontFamily="@font/hammersmithone_regular_font"
                android:textColor="#FAFAFA"
                android:textSize="26dp"/>

            <TextView
                android:id="@+id/reg13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/greenboxbg"
                android:text="REGULATION

                2013"
                android:padding="20dp"
                android:gravity="center"
                android:fontFamily="@font/hammersmithone_regular_font"
                android:textColor="#FAFAFA"
                android:textSize="26dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>